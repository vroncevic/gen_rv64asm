AS = riscv64-linux-gnu-as
LD = riscv64-linux-gnu-ld
RM = rm

include asmflags.mk
include ldflags.mk
include sources.mk
include objects.mk

EXECUTABLE=new_simple_test

all: $(SOURCES) $(EXECUTABLE)

$(EXECUTABLE): $(OBJECTS)
	$(LD) $(LDFLAGS) $(OBJECTS) -o $@

%.o : %.s
	$(AS) $(ASMFLAGS) $< -o $@

clean:
	$(RM) -rf ../*.o *.o $(EXECUTABLE)
